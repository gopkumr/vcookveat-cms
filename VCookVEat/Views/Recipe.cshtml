@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Recipe>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
                /**/

                Layout = "WebBase.cshtml";
}

<div id="colorlib-contact">
    <div class="container">
        <div class="row text-center">
            <h2 class="bold">Recipe</h2>
        </div>

        <div class="recipe-detail" align="center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-12 text-center">
                        <h4>@Umbraco.Field("createDate", formatAsDate: true)</h4>
                        <h1>@Umbraco.Field("recipeName")</h1>
                        <div class="by"><i class="fa fa-user" aria-hidden="true">@Umbraco.Field("creatorName")</i></div>
                    </div>
                    <div class="col-lg-12" >
                        @{
                            var mediaItem = Umbraco.TypedMedia(Umbraco.Field("recipeImage").ToHtmlString());
                            var url = mediaItem==null? "/media/1009/img-4.jpg" : mediaItem.Url;
                        }

                        <img src="@url" alt="@Umbraco.Field("recipeName")">

                        <div class="info" align="center">
                            <div class="row">
                                <div class="col-lg-4 col-sm-4">
                                    <p>Serves:</p>
                                    <p><strong><i class="fa fa-users" aria-hidden="true"></i> @Umbraco.Field("serves") </strong></p>
                                </div>
                                <div class="col-lg-4 col-sm-4">
                                    <p>Prep Time:</p>
                                    <p><strong><i class="fa fa-clock-o" aria-hidden="true"></i> @Umbraco.Field("prepTime") </strong></p>
                                </div>
                                <div class="col-lg-4 col-sm-4">
                                    <p>Cooking:</p>
                                    <p><strong><i class="fa fa-clock-o" aria-hidden="true"></i> @Umbraco.Field("cookingTime") </strong></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-sm-12">
                                    <p>@Umbraco.Field("recipeIntro")</p>
                                </div>
                            </div>

                            <div class="ingredient-direction" align="left">
                                <div class="row">
                                    <div class="col-lg-2 col-sm-2"></div>
                                    <div class="col-lg-4 col-sm-4">
                                            <h3>Ingredients</h3>
                                            <ul class="ingredients">
                                                @foreach (var item in Model.Content.GetPropertyValue<string[]>("ingredients"))
                                                {
                                                    <li>
                                                        @item
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    <div class="col-lg-6 col-sm-6" align="left">
                                            <h3>Directions</h3>
                                            <div class="directions">
                                                <p>@Umbraco.Field("recipeSteps", convertLineBreaks: true)</p>
                                            </div>
                                        </div>
                                </div>
                                </div>
                        </div>
                </div>

            </div>
        </div>
    </div>
</div>
