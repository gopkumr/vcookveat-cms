@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Food>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "WebBase.cshtml";
}

<div id="colorlib-contact">
    <div class="container">
        <div class="row text-center">
            <h2 class="bold">Recipe</h2>
        </div>

        <div class="recipe-detail">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-12 text-center">
                        <h4>@Umbraco.Field("createDate", formatAsDate: true)</h4>
                        <h1>@Umbraco.Field("foodName")</h1>
                        <div class="by"><i class="fa fa-user" aria-hidden="true">@Umbraco.Field("creatorName")</i></div>
                    </div>
                    <div class="col-lg-12 text-center">
                        @{
                            var mediaItem = Umbraco.TypedMedia(Umbraco.Field("photoOfTheFood").ToHtmlString());
                            var url = mediaItem == null ? "/media/1009/img-4.jpg" : mediaItem.Url;
                        }

                        <img src="@url" alt="@Umbraco.Field("foodName")">


                        <p>Cuisine: @Umbraco.Field("cuisine")</p>

                        <div class="ingredient-direction">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h3>Description</h3>
                                    <div class="directions">
                                        <p>@Umbraco.Field("description", convertLineBreaks: true)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
