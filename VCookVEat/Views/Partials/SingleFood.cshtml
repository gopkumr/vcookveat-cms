@inherits Umbraco.Web.Mvc.UmbracoViewPage<VCookVEat.Models.FoodItemViewModel>

@using VCookVEat.Models
@using Umbraco.Web;


<div class="col-md-4">
    <div class="article animate-box">
        @{ 
            int imageid;
            var imageUrl= !string.IsNullOrEmpty(Model.ImageId) && int.TryParse(Model.ImageId, out imageid) ? Umbraco.TypedMedia(Model.ImageId).Url : "/media/1024/fooditem.png";
        }

        <a href="@Model.PageUrl" class="blog-img">
            <img class="img-responsive" src="@imageUrl" alt="@Model.Name" width="2000" height="2000">
            <div class="overlay"></div>
            <div class="link">
                <span class="read">Read more</h2>
            </div>
        </a>
        <div class="desc">
            <span class="meta">@Model.CreatedDate.ToString("dd MMM yy")</span>
            <h2><a href="@Model.PageUrl">@Model.Name</a></h2>
            <p>Cuisine: @Model.Cuisine</p>
        </div>
    </div>
</div>