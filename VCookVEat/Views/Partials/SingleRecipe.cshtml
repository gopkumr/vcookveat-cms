@inherits Umbraco.Web.Mvc.UmbracoViewPage<RecipeItemViewModel>

@using VCookVEat.Models
@using Umbraco.Web;


<div class="col-md-4">
    <div class="article animate-box">
        <a href="@Model.ContentUrl" class="blog-img">
            <img class="img-responsive" src="@Umbraco.TypedMedia(Model.ImageId).Url" alt="@Model.Name">
            <div class="overlay"></div>
            <div class="link">
                <span class="read">Read more</h2>
            </div>
        </a>
        <div class="desc">
            <span class="meta">@Model.CreatedDate.ToString("dd MMM yy")</span>
            <h2><a href="@Model.ContentUrl">@Model.Name</a></h2>
            <p>@Model.Intro</p>
        </div>
    </div>
</div>